{% extends 'layout.html.twig' %}

{% block title %}Register - GitHub PHP Project Finder!{% endblock %}

{% block stylesheets %}

    {{ parent() }}

    <!-- Project Finder CSS -->
    <link href="{{ asset('css/ProjectFinder.css') }}" rel="stylesheet">
{% endblock %}

    {% block page_contents %}

        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="row page-titles">
                <div class="col-md-12 col-12 align-self-center">
                    <h3 class="text-themecolor">GitHub Project Finder</h3>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <!-- Row -->
            <div class="row" id="projectListContainer">
                <!-- Column -->

                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-md-12 col-12">
                                    <div class="d-flex flex-wrap">
                                        <div>
                                            <h3 class="card-title">Register</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div  class="row">
                                <hr />

                                <div class="col-12">
                                    {% for flash_error in app.flashes('error') %}
                                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">

                                    {# Add to temporarily disable HTML5 validation: {'attr': {'novalidate': 'novalidate'}} #}
                                    {# Specify Form Action: 'action': path('target') #}
                                    {{ form_start(registrationForm, {'action': path('app_register'), 'method': 'POST'}) }}

                                        {{ form_row(registrationForm.firstName, {
                                            value: (userData ? userData.firstName : registrationForm.firstName.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.lastName, {
                                            value: (userData ? userData.lastName : registrationForm.lastName.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.email, {
                                            value: (userData ? userData.email : registrationForm.email.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.plainPassword, {
                                            label: 'Password'
                                        }) }}

                                        {{   form_row(registrationForm.addressCity, {
                                            label: 'City',
                                            value: (userData ? userData.addressCity : registrationForm.addressCity.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.addressState, {
                                            label: 'State',
                                            value: (userData ? userData.addressState : registrationForm.addressState.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.addressZipCode, {
                                            label: 'Zip Code',
                                            value: (userData ? userData.addressZipCode : registrationForm.addressZipCode.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.phoneNumber, {
                                            label: 'Phone Number',
                                            value: (userData ? userData.phoneNumber : registrationForm.phoneNumber.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.dateOfBirth, {
                                            label: 'Date of Birth',
                                            value: (userData ? userData.dateOfBirth : registrationForm.dateOfBirth.vars.value)
                                        }) }}

                                        {{ form_row(registrationForm.agreeTerms, {
                                            label: 'Terms & Conditions'
                                        }) }}

                                        <button type="submit" class="btn btn-default">Register</button>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>

                            <hr />

                            <div class="row">
                                <div class="col-12">
                                    <span>Already have an account? <a href="{{ path('app_login') }}">Login</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row -->
            <!-- Row -->

            <!-- ============================================================== -->
            <!-- End Page Content -->
            <!-- ============================================================== -->
        </div>

        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->

    {% endblock %}
