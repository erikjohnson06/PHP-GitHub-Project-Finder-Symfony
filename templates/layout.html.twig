{% extends 'base.html.twig' %}

        {% block sidebar %}

        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    <ul id="sidebarnav">
                        {% block sidebar_links %}

                            <li> <a class="waves-effect waves-dark" href="https://docs.github.com/en/rest" target="_blank" aria-expanded="false"><i class="fa fa-github"></i><span class="hide-menu">GitHub API Docs</span></a></li>

                            {% if app.user %}
                                <li> <a class="waves-effect waves-dark" href="{{ path('app_edit_profile') }}" aria-expanded="false"><i class="fa fa-user"></i><span class="hide-menu">Profile</span></a></li>
                                <li> <a class="waves-effect waves-dark" href="javascript:void(0);" aria-expanded="false"><i class="fa fa-search"></i><span class="hide-menu">Advanced Search</span></a></li>
                            {% endif %}

                            <li> <a class="waves-effect waves-dark" href="javascript:void(0);" aria-expanded="false"><i class="fa fa-question-circle"></i><span class="hide-menu">Questions & Support</span></a></li>

                        {% endblock %}
                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
            <!-- Bottom points-->
            <div class="sidebar-footer">
                <!-- item--><a href="javascript:void(0);" class="link" data-toggle="tooltip" title="Settings"><i class="fa fa-cog fa-sm"></i></a>
                <!-- item--><a href="javascript:void(0);" class="link" data-toggle="tooltip" title="Email"><i class="fas fa-envelope fa-sm"></i></a>
                <!-- item--><a href="{{ path("app_logout") }}" class="link" data-toggle="tooltip" title="Logout"><i class="fa fa-power-off fa-sm"></i></a>
            </div>
            <!-- End Bottom points-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->

        {% endblock %}
        
        {% block content %}

        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            
            {% block page_contents %}{% endblock %}
            
            {{ include('footer.html.twig') }}
            
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
        
        {% endblock %}