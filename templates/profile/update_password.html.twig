{% extends 'layout.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block stylesheets %}

    {{ parent() }}

    <!-- Project Finder CSS -->
    <link href="{{ asset('css/ProjectFinder.css') }}" rel="stylesheet">
{% endblock %}

    {% block page_contents %}

        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="row page-titles">
                <div class="col-md-12 col-12 align-self-center">
                    <h3 class="text-themecolor">GitHub Project Finder</h3>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <!-- Row -->
            <div class="row" id="projectListContainer">
                <!-- Column -->

                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-block">
                            <div class="row">
                                <div class="col-md-12 col-12">
                                    <div class="d-flex flex-wrap">
                                        <div>
                                            <h3 class="card-title">Update Password</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div  class="row">
                                <hr />

                                <div class="col-12">
                                    {% for flash_error in app.flashes('error') %}
                                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">

                                    {# Add to temporarily disable HTML5 validation, {'attr': {'novalidate': 'novalidate'}} #}
                                    {{ form_start(profileForm, {'action': path('app_update_password'), 'method': 'POST'}) }}

                                        {{ form_row(profileForm.plainPasswordNew1, {
                                            label: 'New Password'
                                        }) }}

                                        {{ form_row(profileForm.plainPasswordNew2, {
                                            label: 'Re-Enter Password'
                                        }) }}

                                        <button type="submit" class="btn btn-default">Update</button>
                                    {{ form_end(profileForm) }}
                                </div>
                            </div>

                            <hr />

                            <div class="row">
                                <div class="col-12">
                                    <span><a href="{{ path('index') }}">Cancel</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Row -->
            <!-- Row -->

            <!-- ============================================================== -->
            <!-- End Page Content -->
            <!-- ============================================================== -->
        </div>

        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->

    {% endblock %}
